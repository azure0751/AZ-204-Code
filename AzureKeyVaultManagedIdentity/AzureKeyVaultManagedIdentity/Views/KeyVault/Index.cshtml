@model AzureKeyVaultManagedIdentity.Models.KeyVaultRequestModel

<h2>Retrieve a Secret from Azure Key Vault using Managed </h2>

<form asp-action="GetSecret" asp-controller="KeyVault" method="post">
    <div>
        <label for="KeyVaultName">Key Vault Name:</label>
        <input type="text" id="KeyVaultName" name="KeyVaultName" required />
    </div>
    <div>
        <label for="SecretName">Secret Name:</label>
        <input type="text" id="SecretName" name="SecretName" required />
    </div>
    <div>
        <button type="submit">Get Secret</button>
    </div>
</form>
