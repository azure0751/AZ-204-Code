@model List<string>

@{
    ViewBag.Title = "Container Operations";
}

<h2>Container Operations</h2>

<div class="mb-3">
    <h3>Create a New Container</h3>
    <form asp-action="CreateContainer" method="post">
        <div class="form-group">
            <label for="containerName">Container Name:</label>
            <input type="text" name="containerName" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Create Container</button>
    </form>
</div>

<div class="mb-3">
    <h3>Existing Containers</h3>
    @if (Model != null && Model.Count > 0)
    {
        <ul>
            @foreach (var container in Model)
            {
                <li>
                    <strong>@container</strong>
                    <form asp-action="DeleteContainer" method="post" style="display:inline;">
                        <input type="hidden" name="containerName" value="@container" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No containers found.</p>
    }
</div>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">
        @ViewBag.Message
    </div>
}
